{
  "name": "stacksos",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "bash scripts/build.sh",
    "start": "next start",
    "lint": "eslint src/",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:smoke": "playwright test -c playwright.smoke.config.ts",
    "test:e2e:smoke:headed": "playwright test -c playwright.smoke.config.ts --headed",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "npm run test:run && npm run test:e2e",
    "audit:demo": "bash scripts/audit/find-demo-data.sh",
    "audit:ui-drift": "node scripts/audit-ui-drift.mjs",
    "audit:opac": "bash audit/run_opac_audit.sh",
    "audit:task-benchmark": "node scripts/task-benchmark.mjs",
    "audit:task-benchmark:update-baseline": "node scripts/task-benchmark.mjs --update-baseline",
    "demo:reset": "bash scripts/reset-jakes-demo-library.sh",
    "evergreen:footprint": "bash scripts/evergreen-footprint-snapshot.sh",
    "tenant:provision": "tsx scripts/provision-tenant.ts",
    "tenant:onboarding": "curl -sS http://127.0.0.1:3000/api/admin/onboarding",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf .next .next-ci",
    "prepare": "husky"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tanstack/react-table": "^8.21.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.575.0",
    "next": "^16.1.6",
    "next-intl": "^4.1.0",
    "next-themes": "^0.4.6",
    "nodemailer": "^8.0.1",
    "pg": "^8.19.0",
    "prom-client": "^15.1.3",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "react-hook-form": "^7.71.1",
    "redis": "^5.10.0",
    "server-only": "^0.0.1",
    "sonner": "^2.0.7",
    "swagger-ui-dist": "^5.31.2",
    "tailwind-merge": "^3.4.0",
    "undici": "^7.20.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@next/bundle-analyzer": "^16.1.6",
    "@playwright/test": "^1.58.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^25.3.1",
    "@types/nodemailer": "^7.0.9",
    "@types/pg": "^8.16.0",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.1.2",
    "axe-core": "^4.11.1",
    "eslint": "^9.39.3",
    "eslint-config-next": "^16.1.6",
    "husky": "^9.0.0",
    "jsdom": "^28.1.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "tailwindcss": "^4",
    "tsx": "^4.21.0",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5",
    "vitest": "^4.0.18"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  }
}
